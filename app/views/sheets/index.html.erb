<p style="color: green"><%= notice %></p>

<h1>Sheets</h1>

<table class="table table-striped table-hover">
  <thead class="table-secondary">
    <th>Id</th>
    <th>Name</th>
    <th>Frames</th>
    <th>Rows</th>
    <th>Columns</th>  
    <th>Reel Width</th>
    <th>Reel Height</th>
    <th>Sheet Size</th>
    <th>Sprites</th>
    <th colspan='3'> </th>
  </thead>

  <tbody id="sheets">
  <% @sheets.each do |sheet| %>
      <tr>
        <td>
          <%= sheet.id %>
        <td>
          <%= sheet.name%>
        </td>
        <td>
          <%= sheet.frames%>
        </td>
        <td>
          <%= sheet.rows%>
        </td>
        <td>
          <%= sheet.columns%>
        </td>
        <td>
          <%= sheet.reel_width%>
        </td>
        <td>
          <%= sheet.reel_height%>
        </td>
        <td>
          <%= sheet.sheet_size%>
        </td>
        <td>
          <%= link_to "Sprites", sprites_path %>
        </td>
        <td>
          <%= link_to 'Show', sheet, class: "btn btn-secondary" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_sheet_path(sheet), class: "btn btn-dark" %>
        </td>
        <td>
          <%= link_to 'Destroy', sheet, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>

  <% end %>
</table>

<%= link_to "New sheet", new_sheet_path, class: "btn btn-secondary"%>

