<%= render @sprite %>

<h2>Paths</h2>

  <table class="table table-striped table-hover">
  <thead class="table-secondary">
    <tr>
      <th>Id</th>
      <th>Class</th>
      <th>D</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprite.paths.each do |path| %>
      <tr>
        <td><%= path.id_element %></td>
        <td><%= path.class_element %></td>
        <td><%= path.d_element %></td>
        <td><%= link_to "Show Path", [@sprite, @path, path], class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit Path', edit_sprite_path_path(@sprite, path), class: "btn btn-dark" %></td>
        <td><%= button_to 'Destroy Path', [@sprite, path], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="btn-toolbar">
  <%= link_to 'Add Path', sprite_paths_path(@sprite), class: "btn btn-dark" %>
</div>
<br/>

<div class="btn-group me-2">
  <%= link_to "Edit", edit_sprite_path(@sprite), class: "btn btn-secondary" %>
  <%= link_to "Back", sprites_path, class: "btn btn-dark" %>
</div>
<br/>
<br/>
<div class="btn-group me-3">
  <%= button_to "Destroy this sprite", @sprite, method: :delete, class: "btn btn-danger" %>
</div>
