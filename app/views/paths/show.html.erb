<p style="color: green"><%= notice %></p>

<%= render @path %>

<h2>Paths</h2>
<% for path in @sprite.paths %>
  <ul>
    <i><%= path.id_element %></li>
  </ul>
<% end %>

<div class="btn-toolbar">
<div class="btn-group me-2">

  <%= link_to "Edit", edit_sprite_path(@sprite), class: "btn btn-secondary" %> |
  <%= link_to "Add Path", sprite_paths_path(@sprite), class: "btn btn-dark" %>
  </div>
  <%= link_to "Back", sprite_path(@sprite), class: "btn btn-secondary" %>
</div>
